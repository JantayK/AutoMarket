@page
@model LoginModel

@{
    ViewData["Title"] = "Вход";
}

<div class="shadow p-3 mb-5 bg-white border; container" style="position: center; width: 400px; border-radius: 35px;">
    <section>
        <form id="account" method="post">

            <div class="text-center">
                <h3 class="display-4">@ViewData["Title"]</h3>
                <h6 class="text-muted">Используйте существующий аккаунт для входа.</h6>
            </div>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" placeholder="Email" required />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" placeholder="******" required />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="Input.RememberMe">
                        <input asp-for="Input.RememberMe" class="btn btn-primary"/>
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
            <hr />
            <p style="font-size:small" class="text-center">
                Ещё нету аккаунта? Можете
                <a style="font-size:small" asp-area="Identity" asp-page="/Account/Register">зарегистрироваться</a>
            </p>
            <hr />
            <div class="text-center">
                <button type="submit" class="btn btn-info">Войти</button>
            </div>
        </form>
    </section>
</div>
