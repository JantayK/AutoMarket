@page
@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}
<div class="shadow p-3 mb-5 bg-white border; container" style="position: center; width: 400px; border-radius: 35px;">
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div class="text-center">
            <h3 class="display-4">@ViewData["Title"]</h3>
            <h6 class="text-muted">Создайте новый аккаунт.</h6>
            <hr />
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" class="form-control" placeholder="Email" required />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.FirstName"></label>
            <input asp-for="Input.FirstName" class="form-control" placeholder="Ваше имя" required />
            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.PhoneNumber"></label>
            <input asp-for="Input.PhoneNumber" type="tel" class="form-control" placeholder="+996-222-333-444" required />
            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Password"></label>
            <input asp-for="Input.Password" class="form-control" placeholder="Придумайте пароль" required />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.ConfirmPassword"></label>
            <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Повторите пароль" required />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <hr />
        <p style="font-size:small" class="text-center">
            Уже есть аккаунт? Можете
            <a style="font-size:small" asp-area="Identity" asp-page="/Account/Login">войти</a>
        </p>
        <hr />
        <div class="text-center">
            <button type="submit" class="btn btn-info" style="border-bottom-right-radius:15px; border-top-left-radius:15px" >Регистрация</button>
        </div>
    </form>
</div>
